<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Comida" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="Theme.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FF6B57</item>
        <item name="postSplashScreenTheme">@style/Theme.Comida</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>